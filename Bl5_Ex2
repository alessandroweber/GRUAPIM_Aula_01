import java.util.HashMap;
import java.util.Map;

public class ContadorFrequencia {
    public static void main(String[] args) {
        String texto = "java é uma linguagem java é poderosa java é versátil";
        String[] palavras = texto.split(" ");
        HashMap<String, Integer> frequencia = new HashMap<>();

        for (String p : palavras) {
            frequencia.put(p, frequencia.getOrDefault(p, 0) + 1);
        }

        System.out.println("Frequência das palavras:");
        for (Map.Entry<String, Integer> entrada : frequencia.entrySet()) {
            System.out.println(entrada.getKey() + ": " + entrada.getValue());
        }
    }
}
