import java.util.LinkedList;

public class Navegador {
    private LinkedList<String> historico = new LinkedList<>();
    private int indiceAtual = -1;

    public void visitar(String url) {
        // Remove páginas à frente se estivermos voltado no histórico e visitarmos algo novo
        while (historico.size() > indiceAtual + 1) {
            historico.removeLast();
        }
        historico.add(url);
        indiceAtual++;
        System.out.println("Visitando: " + url);
    }

    public void voltar() {
        if (indiceAtual > 0) {
            indiceAtual--;
            System.out.println("Voltou para: " + historico.get(indiceAtual));
        } else {
            System.out.println("Início do histórico.");
        }
    }

    public void avancar() {
        if (indiceAtual < historico.size() - 1) {
            indiceAtual++;
            System.out.println("Avançou para: " + historico.get(indiceAtual));
        } else {
            System.out.println("Fim do histórico.");
        }
    }

    public static void main(String[] args) {
        Navegador browser = new Navegador();
        browser.visitar("google.com");
        browser.visitar("github.com/braulio");
        browser.voltar();
        browser.avancar();
    }
}
