import java.lang.reflect.Field;

class Configuracao {
    private String urlConexao = "localhost:5432";
}

public class TesteModificador {
    public static void main(String[] args) throws Exception {
        Configuracao config = new Configuracao();

        // Obtendo o campo privado
        Field field = config.getClass().getDeclaredField("urlConexao");
        
        // Tornando-o acessível (pulando a barreira do private)
        field.setAccessible(true);
        
        // Alterando o valor
        field.set(config, "db.producao.com:5432");

        // Verificando a alteração
        String valorAtualizado = (String) field.get(config);
        System.out.println("Nova URL de Conexão: " + valorAtualizado);
    }
}
