public class SomaImpares {
    public static void main(String[] args) {
        int[] numeros = {12, 7, 3, 20, 15, 8, 1};
        int soma = 0;

        for (int num : numeros) {
            if (num % 2 != 0) { // Verifica se o resto da divisão por 2 é diferente de zero
                soma += num;
            }
        }

        System.out.println("A soma dos números ímpares é: " + soma);
    }
}
